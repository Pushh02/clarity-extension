{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Clarity",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [{
        "name": "keyword.control.clarity",
        "match": "\\b(define-public|define-private|define-read-only|define-trait|define-fungible-token|define-non-fungible-token)\\b"
      }]
    },
    "strings": {
      "name": "string.quoted.double.clarity",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.clarity",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.clarity"
}